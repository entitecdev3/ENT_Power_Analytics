<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
  <Dialog id="filterDialog" title="Enter Filter Values" contentWidth="50%" contentHeight="auto" stretch="false">
    <VBox id="filterContainer" class="sapUiSmallMargin"/>
    <beginButton>
      <Button text="OK" type="Emphasized" press=".onConfirmFilterValues"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCancelFilterDialog"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
