<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idFetchLinkDialog" title="Enter Link" class="sapUiResponsiveMargin"
            afterClose=".onCloseDialog">
        <VBox class="sapUiSmallMargin">
            <Label text="Enter the link below:"/>
            <Input id="idLinkInput"/>
        </VBox>
        <buttons>
            <Button text="Submit" type="Emphasized" press=".onSubmitLink"/>
            <Button text="Cancel" press=".onCloseDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
