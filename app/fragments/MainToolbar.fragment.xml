<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt">
      <tnt:ToolHeader id="idToolHeader" width="100%" height="auto">
        <Button id="idNavBack" icon="sap-icon://nav-back" type="Transparent" press="onNavBack" visible="{appView>/navVisible}" />
        <ToolbarSpacer />       
         <Button id="idUserProfile" icon="sap-icon://person-placeholder" type="Attention" press="onProfilePress">
            <layoutData>
                <OverflowToolbarLayoutData id="idOverFlowToolbar" priority="NeverOverflow" />
            </layoutData>
        </Button>
    </tnt:ToolHeader>
</core:FragmentDefinition>
