<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idTestUrlDialog" title="Enter Test URL" contentWidth="400px" type="Message">
        <VBox>
            <Text text="Please enter the URL to test:" />
            <Input id="idTestUrlInput" placeholder="Enter URL here..." />
        </VBox>
        <beginButton>
            <Button text="Test" type="Emphasized" press=".onTestUrlConfirm"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onTestUrlCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
