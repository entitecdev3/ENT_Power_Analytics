<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout.form">
  <VBox alignItems="Stretch" fitContainer="true" height="100%" class="sapUiContentPadding">
    <Table
      id="idConfigSecurityFilterTable"
      autoPopinMode="true"
      mode="Delete"
      alternateRowColors="true"
      growing="true"
      growingScrollToLoad="true"
      fixedLayout="false"
      delete="onDeleteSecurityFilterConfig"
      items="{
        path: '/SecurityFilters',
        parameters: { $$updateGroupId: 'SecurityFilterChanges' }
      }"
    >
      <headerToolbar>
        <Toolbar>
          <Title text="Manage Security Filters" level="H3" />
          <ToolbarSpacer />
          <Button icon="sap-icon://refresh" text="{i18n>Refresh}" press="onRefreshSecurityFilters" />
          <Button
            id="idAddSFButton"
            icon="sap-icon://add"
            text="{i18n>Add}"
            tooltip="Add Security Filter"
            press="onAddSecurityFilterConfiguration"
          />
        </Toolbar>
      </headerToolbar>

      <columns>
        <Column><Text text="{i18n>PORTAL_TYPE}" /></Column>
        <Column><Text text="{i18n>SECURITY_FILTER_ID}" /></Column>
        <Column><Text text="{i18n>SCHEMA}" /></Column>
        <Column><Text text="{i18n>DISPLAY_SETTINGS_LOCKED_IN_VIEWMODE}" /></Column>
        <Column><Text text="{i18n>DISPLAY_SETTINGS_HIDDEN_IN_VIEWMODE}" /></Column>
        <Column><Text text="{i18n>DISPLAY_SETTINGS_DISPLAY_NAME}" /></Column>
        <Column><Text text="{i18n>OPERATOR}" /></Column>
        <Column><Text text="{i18n>REQUIRE_SINGLE_SELECTION}" /></Column>
        <Column><Text text="{i18n>TABLE}" /></Column>
        <Column><Text text="{i18n>COLUMN}" /></Column>
        <Column><Text text="{i18n>SECURITY_FILTER_NAME}" /></Column>
        <Column><Text text="{i18n>VALUE_SOURCE}" /></Column>
        <Column><Text text="{i18n>CUSTOM_VALUES}" /></Column>
      </columns>

      <items>
        <ColumnListItem type="Active" press="onSecurityFilterSelect">
          <cells>
            <Text text="{path: 'portalType', formatter: '.formatter.formatPortalType'}" />
            <Text text="{securityUniqueId}" />
            <Text text="{path: 'schema', formatter: '.formatter.formatSchemaName'}" />
            <CheckBox selected="{displaySetting_isLockedInViewMode}" editable="false" />
            <CheckBox selected="{displaySetting_isHiddenInViewMode}" editable="false" />
            <Text text="{displaySetting_displayName}" />
            <Text text="{operator}" wrapping="false" />
            <CheckBox selected="{requireSingleSelection}" editable="false" />
            <Text text="{table}" />
            <Text text="{column}" />
            <Text text="{description}" />
            <!-- new fields -->
            <Text text="{valueSource}" />
            <Text text="{customValues}"  />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </VBox>
</core:FragmentDefinition>
