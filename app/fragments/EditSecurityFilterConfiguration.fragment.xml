<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog id="idEditSecurityFilterDialog" class="sapUiResponsiveMargin">
        <VBox class="sapUiSmallMargin">
            <Label required="false" text="{i18n>SECURITY_FILTER_NAME}" />
            <Input value="{securityUniqueId}" />
            <Label required="true" text="{i18n>SCHEMA}" />
            <Input value="{schema}"/>
            <!-- <Label required="true" text="{i18n>DISPLAY_SETTINGS}" /> -->
            <!-- <Select width="20vw" items="{/DisplaySettings}" selectedKey="{displaySetting_ID}" forceSelection="false">
                <core:Item key="{ID}" text="{property}" />
            </Select> -->
            <Label required="true" text="{i18n>DISPLAY_SETTINGS_LOCKED_IN_VIEWMODE}" />
            <CheckBox selected="{displaySetting_isLockedInViewMode}" />
            <Label required="true" text="{i18n>DISPLAY_SETTINGS_HIDDEN_IN_VIEWMODE}" />
            <CheckBox selected="{displaySetting_isHiddenInViewMode}" />
            <Label required="true" text="{i18n>DISPLAY_SETTINGS_DISPLAY_NAME}" />
            <Input value="{displaySetting_displayName}" />
            <Label required="true" text="{i18n>OPERATOR}" />
            <Select selectedKey="{operator}" width="auto" forceSelection="false" >
                <core:Item key="In" text="IN" />
                <core:Item key="NotIn" text="NOT IN" />
                <core:Item key="All" text="ALL" />
            </Select>
            <!-- <Input value="{operator}"/> -->
            <Label required="true" text="{i18n>REQUIRE_SINGLE_SELECTION}" />
            <CheckBox selected="{requireSingleSelection}"/>
            <Label required="true" text="{i18n>TABLE}" />
            <Input value="{table}"/>
            <Label required="true" text="{i18n>COLUMN}" />
            <Input value="{column}"/>
            <Label required="true" text="{i18n>VALUE}" />
            <Input value="{values}"/>
            
        </VBox>
        <buttons>
            <Button id="idAddSecurityFilter" text="{i18n>ok}" type="Emphasized" press="onSaveEditSecurityFilterDialog"/>
            <Button text="{i18n>cancel}" press="onCloseEditSecurityFilterDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
